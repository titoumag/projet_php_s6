{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
<div style="width: 300px">
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ evenement.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbMax</th>
                <td>{{ evenement.nbMax }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{{ evenement.public ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="action" style="display: flex; justify-content: space-between">
        <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">Edition</a>

        <a href="{{ path('app_participation_add',{'id': evenement.id}) }}" style="background: green"> Add participation</a>
    {{ include('evenement/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
