{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
<div style="width: 300px">
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ evenement.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbMax</th>
                <td>{{ evenement.nbMax }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{{ evenement.public ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Proprietaire</th>
                <th>{{ evenement.proprietaire.nom}}</th>
            </tr>
            <tr>
                <th>Proprietaire</th>
                <th>{{ evenement.users|length}}</th>
            </tr>
        </tbody>
    </table>

    <div class="action">
    {% if app.user and app.user in evenement.users %}
        <a href="{{ path('app_participation_delete',{'id': evenement.id}) }}" style="background: red"> Remove participation</a>
    {% else %}
        <a href="{{ path('app_participation_add',{'id': evenement.id}) }}" style="background: green"> Add participation</a>
    {% endif %}
        <a href="{{ path('app_evenement_index') }}">Return to list</a>
        
    {% if app.user and app.user.id==evenement.proprietaire.id %}
        <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" style="background: orange">Edition</a>
        {{ include('evenement/_delete_form.html.twig') }}
    {% endif %}
    </div>
</div>
{% endblock %}
